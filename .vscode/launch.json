    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Python: ConfigLib Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scheduler",
            "args": ["${workspaceFolder}/config.yaml"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        }
    ]
}